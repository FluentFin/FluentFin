<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FluentFin.LogoutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluentFin"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" Padding="20" Spacing="15" 
            Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="12">

            <TextBlock Text="Successfully Logged Out" FontSize="24" FontWeight="Bold" TextAlignment="Center"/>
            <Button Content="Login again" Click="OnLoginClick" HorizontalAlignment="Stretch" Margin="0,10,0,0"/>

        </StackPanel>
    </Grid>
</Page>